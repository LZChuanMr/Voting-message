.container{
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 2%;
  box-sizing: border-box;
}
.title view{
  margin-right: 10rpx;
}
.wrap{
  width: 70%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.flex_right{
   width: 100%;
  overflow: hidden;
  display: flex;
  justify-content: flex-end;
}
.tt{
  width: 100%;
  height: 130rpx;
}
.item{
  width:100%; 
  height: 100rpx;
  line-height: 100rpx;
  padding:0 2%;
  box-sizing: border-box;
  font-size: 30rpx;
  border-bottom: 1px solid rgba(187, 187, 187, 0.116); 
}
.option{
  float: right;
  height: 50rpx;
}
.mr40{
  margin-right: 35rpx;
}
.tp{
  width: 100%;
  height: 70rpx;
  background: goldenrod;
  text-align: center;
  line-height: 70rpx;
  margin-top: 5%;
}