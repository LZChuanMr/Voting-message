/* pages/messageDetail/messageDetail.wxss */

.mian {
  height: 100%;
  position: relative;
}

.section {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 1;
  width: 80%;
  height: 55%;
  box-sizing: border-box;
  padding: 66px 30px;
  background: linear-gradient(to bottom, rgb(72, 217, 243),rgb(6, 231, 231));
  font-size: 18px;
  border-radius:10rpx; 
}
.section::after{
  content:"";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  filter: blur(10px);
  background: linear-gradient(to bottom, rgb(243, 189, 72),rgb(231, 160, 6));
  z-index: -1; 
}

